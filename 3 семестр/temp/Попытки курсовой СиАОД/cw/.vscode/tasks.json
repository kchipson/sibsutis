{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compile coursework",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${fileDirname}\\main.cpp",
                "${fileDirname}\\functions.cpp",
                "${fileDirname}\\tree.cpp",
                "-o",
                "${fileDirname}\\bin\\Coursework.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
    }
}